// src/components/WelcomeSection.astro
---

<section class="relative w-full h-screen overflow-hidden shadow-xl">
  <!-- üé• Video de fondo -->
  <video
    autoplay
    muted
    loop
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
  >
    <source src="/videos/mtb-fondo.mp4" type="video/mp4" />
    Tu navegador no soporta videos HTML5.
  </video>

  <!-- üî§ Contenido encima del video -->
  <div class="relative z-10 flex items-center justify-center h-full bg-black/60">
    <div class="logo-container">
      <img 
        src="/img/ride-chucky-logo.svg" 
        alt="Ride Chucky Logo" 
        class="ride-chucky-logo"
      />
    </div>
  </div>
</section>

<style>
  /* Estilos para el contenedor del logo */
  .logo-container {
    width: 85%;
    max-width: 800px;
    display: flex;
    justify-content: center;
    padding: 0 20px;
  }

  /* Estilos para el logo SVG */
  .ride-chucky-logo {
    width: 85%;
    height: auto;
    filter: drop-shadow(0px 0px 8px rgba(0, 0, 0, 0.5));
    max-height: 60vh;
    object-fit: contain;
  }

  /* Asegurar que el video se reproduzca correctamente */
  video {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  /* Responsive adjustments para m√≥viles */
  @media (max-width: 768px) {
    .logo-container {
      width: 90%;
      max-width: 500px;
      padding: 0 15px;
    }
    
    .ride-chucky-logo {
      width: 100%;
      max-height: 40vh;
    }
  }

  @media (max-width: 480px) {
    .logo-container {
      width: 95%;
      max-width: 350px;
      padding: 0 10px;
    }
    
    .ride-chucky-logo {
      width: 100%;
      max-height: 35vh;
    }
  }

  /* Para pantallas muy peque√±as */
  @media (max-width: 360px) {
    .logo-container {
      width: 98%;
      max-width: 300px;
      padding: 0 5px;
    }
    
    .ride-chucky-logo {
      width: 100%;
      max-height: 30vh;
    }
  }
</style>

<script>
  // Asegurar que el video se reproduzca autom√°ticamente
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.querySelector('video');
    if (video) {
      // Intentar reproducir el video
      video.play().catch(error => {
        console.log('Error al reproducir el video:', error);
      });
      
      // Asegurar que el video est√© silenciado para autoplay
      video.muted = true;
    }
  });
</script>
