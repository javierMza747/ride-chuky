<section class="relative w-full h-screen overflow-hidden">
  <!-- ðŸŽ¥ Video de fondo con efecto parallax (JS) -->
  <video
    id="parallax-video"
    autoplay
    muted
    loop
    playsinline
    class="absolute inset-0 w-full h-full object-cover z-0 will-change-transform pointer-events-none"
  >
    <source src="/videos/mtb-fondo.mp4" type="video/mp4" />
    Tu navegador no soporta videos HTML5.
  </video>

  <!-- Overlay oscuro para legibilidad -->
  <div class="absolute inset-0 bg-black/50 z-10"></div>

  <!-- Texto encima -->
  <div class="relative z-20 flex items-center justify-center h-full px-4">
    <h1 class="text-[8rem] md:text-[12vw] font-hajal leading-none text-center text-black stroke-white tracking-wide">
      RIDE CHUCKY
    </h1>
  </div>
</section>

<style>
  /* Compatibilidad para navegadores que no reconocen stroke como utilidad */
  .stroke-white {
    -webkit-text-stroke: 0.05rem white;
    text-stroke: 0.05rem white;
  }
</style>
<script is:inline>
  const video = document.getElementById('parallax-video');

  function updateParallax() {
    if (!video) return;

    const scrollTop = window.scrollY || window.pageYOffset;
    // Aplicar parallax suavemente
    video.style.transform = `translateY(${scrollTop}px)`;
  }

  window.addEventListener('scroll', updateParallax);
  window.addEventListener('resize', updateParallax);
  window.addEventListener('load', updateParallax);
</script>