---
const fotos = [
  {
    id: 1,
    src: "/img/myname.png",
    alt: "Juan Cruz ense√±ando MTB"
  }
];
const fotoPrincipal = fotos[0];
---

<section class="bg-[#f0f0f0] text-[#181818] text-left px-4 relative">
  <div class="mb-4 -mx-4 h-48 relative overflow-hidden">
  <div id="parallax-bg" class="absolute inset-0 bg-[url('/img/background-1.jpg')] bg-cover bg-center grayscale brightness-95 h-screen will-change-transform"></div>

  <div class="relative z-10 flex items-center justify-center h-full px-4">
    <h1 class="text-6xl font-bebas uppercase leading-none text-black drop-shadow-md text-center">
      Nosotros
    </h1>
  </div>
</div>

  <!-- Imagen con texto encima -->
  <div class="relative mt-6">
    <img 
      src={fotoPrincipal.src} 
      alt={fotoPrincipal.alt} 
      class="w-full h-auto object-cover brightness-[0.35] contrast-125"
    />
  </div>
</section>

<script is:inline>
  const bg = document.getElementById('parallax-bg');
  const baseOffset = -window.innerHeight / 2;

  window.addEventListener('scroll', () => {
    const scrolled = window.scrollY;
    if (bg) {
      bg.style.transform = `translateY(${baseOffset + scrolled * 0.5}px)`;
    }
  });
</script>